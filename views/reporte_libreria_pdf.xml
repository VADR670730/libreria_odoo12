<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="reporte_libreria">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2><span t-esc="res_company.name"/>: Reporte Libro</h2>

                    <div class="row mt32">
                        <div class="col-xs-4">
                            <strong>Proveedor:</strong> <span t-esc="data['proveedor']"/><br/>
                        </div>
                        <div class="col-xs-4">
                            <strong>Fecha inicial:</strong> <span t-esc="data['fecha_desde']" t-options='{"widget": "date"}'/><br/>
                            <strong>Fecha final:</strong> <span t-esc="data['fecha_hasta']" t-options='{"widget": "date"}'/>
                        </div>
                    </div>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Nombre</th>
                                <th>isbn</th>
                                <th>Descripcion</th>
                                <th class="text-right">Paginas</th>
                                <th class="text-right">Precio</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="lineas(data)" t-as="l">
                                <td>
                                    <span t-esc="l['fecha']" t-options='{"widget": "date"}'/>
                                </td>
                                <td>
                                    <span t-esc="l['name']"/>
                                </td>
                                <td>
                                    <span t-esc="l['isbn']"/>
                                </td>
                                <td>
                                    <span t-esc="l['description']"/>
                                </td>
                                <td class="text-right">
                                     <span t-esc="l['page']" />
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['price']" t-options="{'widget': 'monetary', 'display_currency': l['moneda']}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="l['balance']" t-options="{'widget': 'monetary', 'display_currency': l['moneda']}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>

    </template>
</odoo>